<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>

<div id="blogs">
  <% @blogs.each do |blog| %>
    <%= render blog %>
    <p>
      <%= link_to "Show", blog %>
      <%= link_to "Edit", edit_blog_path(blog) %>
      <%= link_to 'Delete Post', blog_path(blog), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
    </p>
  <% end %>
</div>

<%= link_to "New blog", new_blog_path %>
