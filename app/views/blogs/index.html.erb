<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thread>
    <tr>
      <th>Blog Title</th>
      <th>Body</th>
      <th colspan='4'></th>
    </tr>
  </thread>

<tbody>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.body %></td>
    <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
    <td><%= link_to "Show", blog %></td>
    <td><%= link_to "Edit", edit_blog_path(blog) %></td>
    <td><%= link_to 'Delete Post', blog_path(blog), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>

<%= link_to "New blog", new_blog_path %>
