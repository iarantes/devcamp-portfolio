<tr>
  <td><%= blog.title %></td>
  <td>Published<br><%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</td>
  <td><%= blog.body %></td>
  <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
  <td><%= link_to "Show", blog %></td>
  <td><%= link_to "Edit", edit_blog_path(blog) %></td>
  <td><%= link_to 'Delete Post', blog_path(blog), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
</tr>
