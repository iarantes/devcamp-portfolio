<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1 shrink-to-fit=no">
    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "blogs", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <%= render 'shared/blog_nav' %>
    <%= render 'shared/blog_masthead' %>

    <div class="container">
      <div class="row"> 
    
        <%= login_helper %>
        
        <div class="col-md-9">
          <%= yield %>
        </div>

        <div class="col-md-3">
          <%= render "shared/blog_sidebar", location: 'bottom' %>
        </div>

      </div>

      <%= render 'shared/blog_footer'%>

      <%= alerts %>

      <%= source_helper("blog") %>
    </div>

  </body>
</html>
