<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1 shrink-to-fit=no">
    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "blogs", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <%= render 'shared/blog_nav' %>
    <%= render 'shared/blog_masthead' %>

    <div class="container">
      <div class="row">    
        <%= login_helper %>
        
        <%= yield %>

        <%= render "shared/nav", location: 'bottom' %>

        <%= render "shared/blog_sidebar", location: 'bottom' %>
      
      </div>

      <%= render 'shared/blog_footer' %>
      <%= source_helper("blog") %>
    </div>

  </body>
</html>
